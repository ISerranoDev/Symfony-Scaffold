{% extends 'layouts/base_login.html.twig' %}
{% block title %}Iniciar Sesión{% endblock %}

{% block content %}
    <div class="w-100 d-flex row justify-content-center">
        <div class="col-6">
            <div class="card mt-50">
                <div class="card-header">
                    <div class="card-title">
                        <h3 class="text-center">Iniciar Sesión</h3>
                    </div>
                </div>
                <div class="card-body">
                    <form action="{{ path('app_login') }}" method="post">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Ya has iniciado sesión como <b>{{ app.user.username }}</b>, <a href="{{ path('app_logout') }}">Salir</a>.
                            </div>
                        {% endif %}

                        <div class="form-group form-group-default">
                            <label>Usuario</label>
                            <input name="username" type="text" class="form-control" placeholder="Nombre de usuario">
                        </div>

                        <div class="form-group form-group-default mb-1">
                            <label>Contraseña</label>
                            <input name="password" type="password" class="form-control" placeholder="**************">
                        </div>

                        <p class="text-end">
                            <a  href="{{ path('app_recover_password_render') }}">¿Has olvidado la contraseña?</a>
                        </p>

                        <button class="w-100 btn btn-primary">Iniciar sesión</button>

                    </form>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_register_render') }}" class="w-100 btn btn-info mt-2 mb-2">Registro</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}